{% extends 'base.html.twig' %}

{% block title %}Wonder{% endblock %}

{% block body %}
    <ul>
    {% for question in questions %}
        <a href="{{ path('question_show', {id: question.id})}}"class="block d-flex flex-row mb-20 block-shadow">
            <div class="d-flex flex-column mr-20 align-items-center">
                <i class="fa-solid fa-up-long {{ question.rating > 0 ? 'rating-up' : ''}}"></i>
                <p class="text-small {{ question.rating > 0 ? 'rating-up' : question.rating < 0 ? 'rating-down' : ''}}">{{question.rating}}</p>
                <i class="fa-solid fa-down-long {{ question.rating < 0 ? 'rating-down' : ''}}"></i>
            </div>
            <div class="flex-fill d-flex flex-column">
                <div class="mb-20 question-content pb-20">
                    <h3 class="mb-20">{{question.titre}}</h3>
                    <p>{{question.contenu}}</p>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <img class="avatar mr-10"src="{{question.auteur.avatar}}"/>
                        <small>Question pos√©e par <span class="cliquable">{{question.auteur.name}}</span></small>
                    </div>
                    <div class="d-flex flex-row align-items-center">
                        <i class="fa-regular fa-comment mr-10"></i>
                        <p>{{ question.nbReponse}}</p>
                    </div>

                </div>
            </div>
        
        
        </a>
        
    {% endfor %}

    
    
    
    
    </ul>


{% endblock %}

